<h1>Editing Book</h1>
<!-- form_for部分 -->

<%= render "layouts/error_messages",model: @book %>

<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_field :body %>

    <%= f.submit 'Update Book' %>
    <%= link_to "Show", book_path(@book.id) %>
    <%= link_to "Back", books_path %>

<% end %>
