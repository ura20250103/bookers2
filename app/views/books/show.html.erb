<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render "users/users",book: @newbook, user: @user %>
         </div>

		<div class="col-xs-9">
	        <table class="table">
			<thead>
			 <tr>
	            <h1>Book detail</h1>
	         </tr>
	         </thead>
					<tbody>
						<tr>
							<td><%= attachment_image_tag @users, :profile_image, size: "40x40", fallback: "japan.jpg"%>
								<br><%=link_to @user.name, "/users/#{@user.id}" %>
							</td>
							<td><%= @book.title %></td>
							<td><%= @book.body %></td>
							 <% if current_user == @user %>
							<td><%= link_to "Edit", edit_book_path(@book.id) %></td>
							<td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
							 <% end %>
						</tr>
				    </tbody>
	        </table>
		</div>
	</div>
</div>