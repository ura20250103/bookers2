<div class="container"> 
	<div class="row">
		<div class="col-xs-3">
			<%= render "users/users",book: @book, user: @user %>
		</div>
		<div class="col-xs-9">
		 <h1>Users</h1>
		 <table class="table">
		 	<thead>
			  <tr>
                <th>image</th>
			    <th>name</th>
			    <th></th>
			  </tr>
			</thead>
			<tbody>
			  <% @users.each do |user| %>
				  <tr>
				  	 <td><%= attachment_image_tag user, :profile_image, size: "40x40", fallback: "japan.jpg"%>
				  	 </td>
				     <td><%= user.name %></td>

				    <th><%= link_to "Show", user_path(user.id) %></th>
				  </tr>
			   <% end %>
			</tbody>
		 </table>
		</div>
	</div>
</div>
