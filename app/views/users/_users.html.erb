<h1>User info</h1>
<table class="table">
	<%= attachment_image_tag user, :profile_image, size: "100x100", class: "img-circle pull-left profile-thumb", fallback: "japan.jpg"%>
	<tr>
	  	<th>name</th>
		<th>
		<%= user.name %>
		</th>
	</tr>
	<tr>
		<th>introduction</th>
	  	<th><%= user.introduction %></th>
	</tr>
</table>
<%= link_to "編集", edit_user_path(@user.id) %>



<h1>New book</h1>
<!-- form_for部分 -->
<%= form_for(book) do |f| %>
 <%= render 'layouts/error_messages', model: f.object %>
    <h4>Title</h4><br>
    <%= f.text_field :title %>
 
    <h4>Opinion</h4><br>
    <%= f.text_area :body %><br>

 
    <%= f.submit 'Create Book' %>
 
<% end %>
