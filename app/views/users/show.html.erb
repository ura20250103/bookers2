<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render "users/users",book: @book, user: @user %>
        </div>
		<div class="col-xs-9">
		 <h1>Books</h1>
		 <table class="table">
		 	<thead>
		 		<tr>
		 	  <th></th>
		      <th>Title</th>
		      <th>Opinion</th>
		      </tr>
		      </thead>
			<tbody>
				<% @books.each do |book| %>
		      <tr>
		      	<td><%= attachment_image_tag @user, :profile_image, size: "40x40", fallback: "japan.jpg"%>
			    </td>
		        <td><%=link_to book.title, "/books/#{book.id}" %></td>
		        <td><%= book.body %></td>
		      </tr>
		   <% end %>
		   </tbody>
		   </table>
        </div>
	</div>
</div>