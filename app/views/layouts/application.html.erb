<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


<body style="padding-top: 70px;">
   <header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav class="nav navbar-nav navbar-left">
      <span style="color: white; font-size: 30px;">Bookers</span>
    </nav>
    <nav>

      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to "Home", user_path(current_user.id), class: "#" %>
</li>
          <li><%= link_to "Users", users_path, class: "#" %>
</li>
          <li><%= link_to "Books", books_path, class: "#" %>
</li>
          <li>
            <%= link_to "logout", destroy_user_session_path, class: "glyphicon glyphicon-log-out logout", method: :delete %>
          </li>
          <% else %>

          <li><%= link_to "Home", root_path, class: "#" %>
</li>
          <li><%= link_to "About", home_about_path, class: "#" %>
</li>
        <li><%= link_to "Sign up", "/users/sign_up", class: "#" %></li>
<li> <%= link_to "login", "/users/sign_in", class: "#" %>
</li>
          <% end %>

      </ul>
    </nav>
  </div>
</header>

<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>

    <%= yield %>
  </body>
</html>
